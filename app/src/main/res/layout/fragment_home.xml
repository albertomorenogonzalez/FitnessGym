<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fitnessgym.fragments.HomeFragment"
    android:background="@drawable/main_background">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="165dp"
        android:layout_height="46dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="123dp"
        android:fontFamily="@font/bebas_neue_regular"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="178dp"
        android:layout_height="115dp"
        android:layout_marginStart="116dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/fitness_gym_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text"
        android:contentDescription="@string/app_logo" />

    <LinearLayout
        android:id="@+id/customer_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="30dp"
        android:background="@color/red"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/customer_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            app:tint="@color/white"
            android:src="@drawable/weight_lifter"
            android:contentDescription="@string/customer_icon" />

        <TextView
            android:id="@+id/customer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/bebas_neue_regular"
            android:text="@string/customers"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/groups_button"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/red"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/groups_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            app:tint="@color/white"
            android:src="@drawable/ic_baseline_groups_24"
            android:contentDescription="@string/customer_icon" />

        <TextView
            android:id="@+id/groups_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/bebas_neue_regular"
            android:text="@string/groups"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>