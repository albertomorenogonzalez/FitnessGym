<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.example.fitnessgym.LoginActivity">

    <TextView
        android:id="@+id/backSquare"
        android:layout_width="335dp"
        android:layout_height="519dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="62dp"
        android:alpha=".4"
        android:background="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="100dp"
        android:contentDescription="@string/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fitness_gym_logo" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userEmail"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="25dp"
        android:hint="@string/email"
        app:layout_constraintEnd_toEndOf="@+id/backSquare"
        app:layout_constraintTop_toTopOf="@+id/backSquare">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColorHint="#616161" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/userPw"
        android:layout_width="292dp"
        android:layout_height="60dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="25dp"
        android:hint="@string/password"
        app:layout_constraintEnd_toEndOf="@+id/backSquare"
        app:layout_constraintTop_toBottomOf="@+id/userEmail">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtPw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColorHint="#616161" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="25dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/gray"
        android:text="@string/log_in"
        app:layout_constraintEnd_toEndOf="@+id/backSquare"
        app:layout_constraintTop_toBottomOf="@+id/userPw" />

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="116dp"
        android:layout_height="48dp"
        android:layout_marginEnd="25dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/gray"
        android:text="@string/register"
        app:layout_constraintEnd_toEndOf="@+id/backSquare"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>